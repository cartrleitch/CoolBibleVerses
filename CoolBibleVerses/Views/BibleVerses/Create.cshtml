@model CoolBibleVerses.Models.BibleVerse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BibleVerse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for = "Book">Book</label>
                <select for="Book" name="Book" id="Book" class="form-control" data-val="true" data-val-required="The Book field is required." required>
                    <option value="" selected disabled>Select a Book</option>
                    @foreach (var book in ViewBag.BibleBooks)
                    {
                        <option value="@book.bookName">@book.bookName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Chapter" class="control-label"></label>
                <input asp-for="Chapter" class="form-control" />
                <span asp-validation-for="Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Verse" class="control-label"></label>
                <input asp-for="Verse" class="form-control" />
                <span asp-validation-for="Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Tags" class="control-label">Tags (separate with commas)</label>
                <input type="text" id="Tags" name="Tags" class="form-control" />
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="button-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
